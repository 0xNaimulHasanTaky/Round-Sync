<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.jaredrummler.android.colorpicker.ColorPreference
        android:title="@string/pref_primary_color_title"
        android:key="@string/pref_key_color_primary"
        android:defaultValue="@color/colorPrimary"
        app:cpv_dialogTitle="@string/select_primary_color"
        app:cpv_colorPresets="@array/primary_color_choices"
        app:cpv_showColorShades="false"
        app:cpv_allowCustom="false" />

    <com.jaredrummler.android.colorpicker.ColorPreference
        android:title="@string/pref_accent_color_title"
        android:key="@string/pref_key_color_accent"
        android:defaultValue="@color/colorAccent"
        app:cpv_dialogTitle="@string/select_accent_color"
        app:cpv_colorPresets="@array/accent_color_choices"
        app:cpv_showColorShades="false"
        app:cpv_allowCustom="false" />

    <SwitchPreference
        android:title="Use dark theme"
        android:key="@string/pref_key_dark_theme"
        android:defaultValue="false" />

</PreferenceScreen>