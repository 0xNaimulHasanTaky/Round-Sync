<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.SettingsActivity"
    android:orientation="vertical">
    <!--tools:showIn="@layout/activity_settings"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/settings_padding_ends"
        android:paddingEnd="@dimen/settings_padding_ends"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:id="@+id/primary_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_padding_topbottom"
            android:paddingBottom="@dimen/settings_padding_topbottom"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/primary_color"/>

            <ImageView
                android:id="@+id/primary_color_preview"
                android:layout_width="@dimen/settings_padding_topbottom"
                android:layout_height="@dimen/settings_padding_topbottom"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_circle"
                android:contentDescription="@string/content_description_circle"
                app:tint="@color/colorPrimary" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_divider_size"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/accent_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_padding_topbottom"
            android:paddingBottom="@dimen/settings_padding_topbottom"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/accent_color"/>

            <ImageView
                android:id="@+id/accent_color_preview"
                android:layout_width="@dimen/settings_padding_topbottom"
                android:layout_height="@dimen/settings_padding_topbottom"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_circle"
                android:contentDescription="@string/content_description_circle"
                app:tint="@color/colorAccent" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_divider_size"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/theme_title"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/auto_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:text="@string/auto_theme"/>

            <Switch
                android:id="@+id/auto_theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dark_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:text="@string/dark_theme"/>

            <Switch
                android:id="@+id/dark_theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/light_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/light_theme"
                android:textColor="@color/textColorPrimary" />

            <Switch
                android:id="@+id/light_theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_divider_size"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/wrap_filenames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_padding_topbottom"
            android:paddingBottom="@dimen/settings_padding_topbottom"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/wrap_filenames"/>

            <Switch
                android:id="@+id/wrap_filenames_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_divider_size"
            android:background="@color/dividerColor"/>
    </LinearLayout>

</ScrollView>
